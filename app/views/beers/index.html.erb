<h1>Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <td><span class="label label-warning"><%= link_to 'Edit', edit_beer_path(beer) if current_user %></span></td>
        <td><span class="label label-danger"><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' } if current_user %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to('New Beer', new_beer_path, class:"btn btn-primary") if current_user %> <%= link_to 'List of breweries', breweries_path %>
