<div class="col-sm-12">
  <h1 class="page-header">Watering holes</h1>
</div>

<div class="col-sm-12">
  <%= form_tag places_path do %>
    city <%= text_field_tag :city, params[:city] %>
    <%= submit_tag "Search", class: "btn btn-primary btn-sm"%>
<% end %>

<% if @places %>
    <table class="table table-hover">
      <thead>
      <% Place.rendered_fields.each do |f| %>
          <td><%=f %></td>
      <% end %>
      </thead>
      <% @places.each do |place| %>
          <tr>
            <td><%= place.id %></td>
            <td><%= link_to place.name, place_path(place.id) %></td>
            <td><%= place.status %></td>
            <td><%= place.street %></td>
            <td><%= place.city %></td>
            <td><%= place.zip %></td>
            <td><%= place.country %></td>
            <td><%= place.overall %></td>
          </tr>
      <% end %>
    </table>
<% end %>
</div>