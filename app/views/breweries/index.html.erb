<p id="notice"><%= notice %></p>

<h1>Breweries</h1>
<p> Number of breweries: <%= @breweries.count %> </p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) if current_user %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: {confirm: 'Are you sure?'}  if current_user%></td>
      </tr>
  <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'New Brewery', new_brewery_path if current_user %> | <%= link_to 'List of beers', beers_path %>